              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "description": "Document not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createDocumentVersion",
        "summary": "Create a new version",
        "description": "Creates a new version by uploading a PDF file.\n\nVersion number is automatically incremented.",
        "tags": [
          "Versions"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "payload"
                ],
                "properties": {
                  "payload": {
                    "type": "string",
                    "x-format": "binary",
                    "description": "PDF file for new version"
                  },
                  "title": {
                    "type": "string",
                    "x-maxLength": 255,
                    "description": "Optional version title"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of changes in this version"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Version created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/documents/{id}/entry-page": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "x-pattern": "^doc_[0-9a-hjkmnp-tv-z]{26}$"
          }
        }
      ],
      "post": {
        "operationId": "generateDocumentEntryPage",
        "summary": "Generate document entry page",
        "description": "Generates and returns a temporary downloadable URL for the document entry page PDF.",
