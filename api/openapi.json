            "in": "query",
            "description": "Filter by submission time (Unix timestamp or RFC 3339)",
            "schema": {
              "oneOf": [
                {
                  "type": "integer",
                  "x-format": "int64"
                },
                {
                  "type": "string",
                  "x-format": "date-time"
                }
              ]
            }
          },
          {
            "name": "submitted_lte",
            "in": "query",
