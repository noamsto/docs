    "/documents/{document_id}/versions/{version_id}": {
      "parameters": [
        {
          "name": "document_id",
          "in": "path",
          "required": true,
          "description": "Document ID",
          "schema": {
            "type": "string",
            "x-pattern": "^doc_[0-9a-hjkmnp-tv-z]{26}$"
          }
        },
        {
          "name": "version_id",
          "in": "path",
          "required": true,
          "description": "Version ID",
